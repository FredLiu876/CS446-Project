<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.postingList.PostingListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/header_destination_postings"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Destination Postings"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/header_border" />

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/expandable_layout_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </net.cachapa.expandablelayout.ExpandableLayout>

        <TextView
            android:id="@+id/header_start_postings"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Start Postings"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/header_border" />

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/expandable_layout_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </net.cachapa.expandablelayout.ExpandableLayout>



    </LinearLayout>
</FrameLayout>